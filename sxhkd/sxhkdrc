#
# bspwm hotkeys
#

super + alt + Escape
    bspc quit

#
#--- windows ---#
#

# close focussed window
super + x
    bspc node -c

# toogle pseudo tiled
#super + t
#   bspc window -t pseudo_tiled

# toggle floating window
super + f
    bspc node -t floating

# swap with last window
super + apostrophe
    bspc node -s last

# move into biggest space
super + b
    bspc node -s biggest

# cycle windows forward backward
alt + {_,shift + }Tab
    bspc node -f {next,prev}

# focus or swap windows
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

#
# --- splitting ---
#
# preselect the splitting area
super + ctrl + shift + {h,j,k,l}
    bspc node -p {west,south,north,east}
# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}
# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel
#
# --- splitend ---
#

# resize window
super + ctrl + h
    bspc node @west -r -10;bspc node @east -r -10
super + ctrl + j
    bspc node @south -r +10;bspc node @north -r +10
super + ctrl + k
    bspc node @north -r -10;bspc node @south -r -10
super + ctrl + l
    bspc node @east -r +10;bspc node @west -r +10

#
#--- common ---#
#

# focus last window, desktop
super + {grave,Tab}
    bspc {desktop,node} -f last

# focus desktop / send window to desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

#
#--- desktop ---#
#

# next layout (monocle or tiled)
super + t
    bspc desktop -l next

# # balance the desktop (adjust split area)
super + {shift,ctrl} + b
    bspc node @focused:/ {-B,-E}

# # rotate the leaves of the tree
super + bracket{left,right}
    bspc node @focused:/ -R {270,90}

# # flip the desktop tree
 # super + shift + bracket{left,right}
 #    bspc node @focused:/ -F {horizontal,vertical}

# adjust window gap
super + {KP_Add, KP_Subtract}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

#
#--- mouse ---#
#

# grab focus on mouse click
~button1
    bspc pointer -g focus

# move/resize with mouse
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

#
#--- application launchers ---#
#

super + Return
    urxvtc -font "xft:Meslo\ LG\ M\ DZ:pixelsize=13:antialias=true:autohint=true,xft:Source\ Code\ Pro\ Medium:pixelsize=13:antialias=true:hinting=true,xft:Meslo\ LG\ M\ DZ\ for\ Powerline\ Plus\ Nerd\ File\ Types\ Mono\ Plus\ Font\ Awesome:pixelsize=13:antialias=true:autohint=true"

super + shift + f
    firefox-developer

super + v
    gvim

# make sxhkd reload its configuration files:
super + shift + Escape
    pkill -USR1 -x sxhkd

# Volume control
XF86AudioRaiseVolume
    pulseaudio-ctl up

XF86AudioLowerVolume
    pulseaudio-ctl down

XF86AudioMute
    pulseaudio-ctl mute

# Brightness control
XF86MonBrightnessUp
    dzen_brightness.sh up

XF86MonBrightnessDown
    dzen_brightness.sh down

# screenshot
Print
    import -window root "$HOME/Pictures/scrot-$(date +%Y%m%d_%H%M%S).jpg"

shift + Print
    import -window -window "$(xdotool getwindowfocus -f)" "$HOME/Pictures/scrot-$(date +%Y%m%d_%H%M%S).jpg"

ctrl + Print
    import "$HOME/Pictures/scrot-$(date +%Y%m%d_%H%M%S).jpg"

# exit
super + F4
    exit-box.sh

# runner
super + d
    dmenu_run -i -z -p "Run >" -l 7 -w 320 -dim 0.7 -x 430 -y 484

# time
super + a
    notify-send "$(date)"

# lock
super + ctrl + F11
    xscreensaver-command --lock

ctrl + shift + F12
	$HOME/.dotfiles/bin/compton-toggle
