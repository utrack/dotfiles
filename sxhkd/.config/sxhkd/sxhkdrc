super + shift + f
    firefox

# make sxhkd reload its configuration files:
super + shift + Escape
    pkill -USR1 -x sxhkd

# screenshot
Print
    import -window root "$HOME/Pictures/scrot-$(date +%Y%m%d_%H%M%S).jpg"

shift + Print
    import -window -window "$(xdotool getwindowfocus -f)" "$HOME/Pictures/scrot-$(date +%Y%m%d_%H%M%S).jpg"

ctrl + Print
    import "$HOME/Pictures/scrot-$(date +%Y%m%d_%H%M%S).jpg"

# time
super + a
    notify-send "$(date)"

# lock
super + ctrl + F11
    xscreensaver-command --lock

ctrl + shift + F12
	$HOME/.bin/compton-toggle
super + ctrl + F10
	$HOME/.bin/reset-displays.sh

# media for ms ergo
XF86Back
  xte 'keyup XF86Back' 'key XF86AudioPrev'
XF86Forward
  xte 'keyup XF86Forward' 'key XF86AudioNext'
# media for thinkpad
super + Home
  xdotool key --clearmodifiers XF86AudioPrev
super + End
  xdotool key --clearmodifiers XF86AudioNext
super + Delete
  xdotool key --clearmodifiers XF86AudioPlay

# baton is a Spotify client
XF86AudioPrev
  baton prev
XF86AudioNext
  baton next
XF86AudioPlay
  baton pause

# toggle thinkpad's touchpad
XF86Tools
  $HOME/.bin/tpad-toggle.sh


# Volume control
XF86AudioRaiseVolume
  ponymix increase 5
XF86AudioLowerVolume
  ponymix decrease 5
XF86AudioMute
  ponymix toggle

# Brightness control
XF86MonBrightnessUp
    xbacklight -inc 5
XF86MonBrightnessDown
    xbacklight -dec 5